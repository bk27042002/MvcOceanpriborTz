@model MvcOceanpriborTz.Models.Ship

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название корабля
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipName)
        </dd>
        <dt class = "col-sm-2">
            Тип корабля
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipType)
        </dd>
        <dt class = "col-sm-2">
            Год создания
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearBuild)
        </dd>
        <dt class = "col-sm-2">
            Длина
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dlina)
        </dd>
        <dt class = "col-sm-2">
            Страна создания
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ShipID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
